<?xml version="1.0"?>
<config>
    <tabs>
        <aldress translate="label" module="aldress_color">
            <label><![CDATA[Alex Customization]]></label>
            <sort_order>0</sort_order>
        </aldress>
    </tabs>
    <sections>
        <color translate="label" module="aldress_color">
            <label>Manage Store Colors</label>
            <tab>aldress</tab>
            <sort_order>15</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <color_picker translate="label">
                    <label>Manage FrontEnd Color Picker</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable>
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <default>
                            <label>Default Color</label>
                            <frontend_type>color</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[<div id="palette-reset_admin">Reset default color to #712c6b;</div>]]></comment>
                        </default>
                    </fields>
                </color_picker>
            </groups>
        </color>
    </sections>
</config>